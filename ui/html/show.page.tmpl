{{template "base" .}}

{{define "title"}}Show #{{.Scratch.ID}}{{end}}

{{define "main"}}
    {{with .Scratch}}
        <article>
            <header>
                <strong>{{.Title}}</strong>
                <span>#{{.ID}}</span>
            </header>
            <pre style="background-color: white">{{.Content}}</pre>
            <footer>
                <div class="grid">
                    <time><small>Created: {{.Created | humanDate}}</small></time>
                    <time><small>Expires: {{.Expires | humanDate}}</small></time>
                </div>
            </footer>
        </article>
    {{end}}
{{end}}