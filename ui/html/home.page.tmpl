{{template "base" .}}

{{define "title"}}Home{{end}}

{{define "main"}}
    <main>
        <h2>Latest Scratches</h2>

        {{if .Scratches}}
            <table>
                <tr>
                    <th>Title</th>
                    <th>Created</th>
                    <th>ID</th>
                </tr>
                {{range .Scratches}}
                    <tr>
                        <td><a href='/scratches?id={{.ID}}'>{{.Title}}</a></td>
                        <td>{{.Created | humanDate}}</td>
                        <td>#{{.ID}}</td>
                    </tr>
                {{end}}
            </table>
        {{else}}
            <p>There's nothing to see here... yet!</p>
        {{end}}
    </main>
{{end}}