{{template "base" .}}

{{define "title"}}Create a New Scratch{{end}}

{{define "main"}}
    <main>
        <form action="/scratches/create" method="POST">
            <div>
                <label for="title">Title:</label>
                <input type="text" id="title" name="title">
            </div>
            <div>
                <label for="content">Content:</label>
                <textarea id="content" name="content"></textarea>
            </div>
            <div>
                <fieldset>
                    <legend>Delete in:</legend>

                    <input type="radio" id="year" name="expires" value="365" checked>
                    <label for="year">One Year</label>
                    <input type="radio" id="week" name="expires" value="7">
                    <label for="week">One Week</label>
                    <input type="radio" id="day" name="expires" value="1">
                    <label for="day">One Day</label>
                </fieldset>
            </div>
            <div>
                <input type="submit" value="Publish scratch">
            </div>
        </form>
    </main>
{{end}}